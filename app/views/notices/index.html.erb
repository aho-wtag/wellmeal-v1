<h1>This is the NOTICE index page</h1>

<p>
  <%= link_to 'new notice', new_notice_path %>
</p>

<table>
  <tr>
    <th>User ID</th>
    <th>Notice Title</th>
    <th>Notice Body</th>
  </tr>
  <% @notices.each do |notice| %>
    <tr>
      <td><%= notice.user_id %></td>
      <td><%= notice.notice_title %></td>
      <td><%= notice.notice_body %></td>
      <%if current_user.admin? or current_user.sup_admin?%>

      <td><%=link_to'edit', edit_notice_path(notice) %></td>
      <td><%=link_to'show', notice_path(notice) %></td>
      <td> <%= link_to "delete", notice_path(notice), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %> </td>
  <%end %>
    </tr>


  <% end %>
</table>