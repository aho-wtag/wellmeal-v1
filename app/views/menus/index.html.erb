<h1>This is the menu index page</h1>

<%if can? :create, Menu %>
  <%= link_to 'create new menu', new_menu_path %>

<%end %>
<h1>Today's Lunch </h1>
<% @today_lunch_menu.each do |menu| %>

  <ul>
    <% menu.dish.each do |d| %>
      <li><%= d.name %></li>
    <% end %>
  </ul>

<% end %>

<h1>Today's Snack </h1>
<% @today_snack_menu.each do |menu| %>

  <ul>
    <% menu.dish.each do |d| %>
      <li><%= d.name %></li>
    <% end %>
  </ul>

<% end %>

<table class="table table-striped">
  <tr>
    <th>Menu ID</th>
    <th>Date</th>
    <th>Meal Type</th>
    <th>Item Name</th>
    <th>Added By</th>
  </tr>
  <% @menus.each do |menu| %>
    <tr>
      <td><%= menu.id %></td>
      <td><%= menu.meal_date %></td>
      <td><%= menu.meal_type %></td>
<!--      <td><%#= menu.dish %></td>-->
      <td>
        <ul>
          <% menu.dish.each do |d| %>
            <li><%= d.name %></li>
          <% end %>
        </ul>
      </td>
      <td><%= menu.user.first_name %></td>
      <td><%=link_to'show', menu_path(menu) %></td>
      <%if can? :update, Menu %>
      <td><%=link_to'edit', edit_menu_path(menu) %></td>
        <%end %>
      <%if can? :destroy, Menu %>
      <td> <%= link_to "delete", menu_path(menu), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %> </td>
    <%end %>
        </tr>


  <% end %>
</table>