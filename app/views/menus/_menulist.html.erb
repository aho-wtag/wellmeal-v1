<table class="table">
  <tr>
    <th>Date</th>
    <th>Meal Type</th>
    <th>Item Name</th>
    <th>Added By</th>
  </tr>
  <% menulist.each do |menu| %>
    <tr>
      <td><%= menu.meal_date %></td>
      <td><%= menu.meal_type %></td>

      <td>
        <ul>
          <% menu.dish.each do |d| %>
            <li><%= d.name %></li>
          <% end %>
        </ul>
      </td>
      <td><%= menu.user.first_name %></td>
      <td><%=link_to'show', menu_path(menu),class: "btn btn-success" %></td>
      <%if can? :update, Menu %>
        <td><%=link_to'edit', edit_menu_path(menu),class: "btn btn-warning"%></td>
      <%end %>
      <%if can? :destroy, Menu %>
        <td> <%= link_to "delete", menu_path(menu),class: "btn btn-danger", data: { method: :delete, confirm: "Are you sure?"} %> </td>
      <%end %>
    </tr>


  <% end %>
</table>
